{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "lib": ["es2019"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}